@model SLRFC.PlayerManager.ViewModels.PlayersViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Players</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Player.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Player.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Player.Position)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Player.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Players) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MembershipId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MembershipId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MembershipId })
        </td>
    </tr>
}

</table>
